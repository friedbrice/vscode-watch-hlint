{
  "name": "vscode-watch-hlint",
  "displayName": "vscode-watch-hlint",
  "description": "Read diagnostics from hlint.json",
  "version": "0.0.1",
  "publisher": "friedbrice",
  "homepage": "https://github.com/friedbrice/vscode-watch-hlint",
  "repository": "https://github.com/friedbrice/vscode-watch-hlint",
  "author": "Daniel Brice",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Watch Hlint configuration",
      "properties": {
        "hlintCommand": {
          "type": "string",
          "default": null,
          "description": "Hlint command (unused at the moment)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "package-vsix": "vsce package",
    "install-vsix": "code --install-extension `find -name *vsix`"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "vsce": "^2.11.0"
  }
}
